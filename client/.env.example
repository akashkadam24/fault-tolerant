# Environment
NODE_ENV=development                           # Environment (development/production)

# API Configuration
VITE_APP_BACKEND_URL=http://localhost:3001    # Backend server URL

# WebRTC Configuration
VITE_TURN_SERVER_URL=                         # Your TURN server URL (required for NAT traversal)
VITE_TURN_SERVER_USERNAME=                    # Your TURN server username
VITE_TURN_SERVER_CREDENTIAL=                  # Your TURN server credential

# Video Configuration
VITE_MAX_RECONNECT_ATTEMPTS=3                 # Maximum number of video reconnection attempts
VITE_RECONNECT_TIMEOUT=2000                   # Delay between reconnection attempts (ms)
VITE_QUALITY_CHECK_INTERVAL=5000              # Interval for checking video quality (ms)
VITE_MIN_VIDEO_BITRATE=150000                # Minimum acceptable video bitrate (bps)
VITE_MAX_PACKET_LOSS=5                        # Maximum acceptable packet loss percentage

# UI Configuration
VITE_MAX_MESSAGES_STORED=100                  # Maximum number of messages to store in local history
VITE_STATUS_DISPLAY_DURATION=3000             # How long to show status messages (ms)
VITE_ERROR_DISPLAY_DURATION=5000              # How long to show error messages (ms)

# Debug Configuration
VITE_ENABLE_DEBUG_LOGGING=false               # Enable detailed debug logging